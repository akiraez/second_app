<%= render 'layouts/public_header' %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/end_users/shared/error_messages", resource: resource %>

  <table class="table">
    <tr>
      <td>名前</td>

      <td>(姓)</td>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>

      <td>(名)</td>
      <td><%= f.text_field :under_name, autofocus: true, autocomplete: "under_name" %></td>
    </tr>

    <tr>
      <td>フリガナ</td>

      <td>(セイ)</td>
      <td><%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></td>

      <td>(メイ)</td>
      <td><%= f.text_field :kana_under_name, autofocus: true, autocomplete: "kana_under_name" %></td>
      </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td></td>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>

    <tr>
      <td>パスワード(６文字以上)</td>
      <td></td>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <td>パスワード(確認用)</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </table>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>



<%= render "public/end_users/shared/links" %>
