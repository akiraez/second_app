<%= render 'layouts/public_header' %>

<h2>商品一覧</h2>

  <% @items.each do |item| %>
<table class="table">
  <tr>
    <th>商品画像</th><th>商品名</th><th>税抜価格</th><th></th>
  <tr>
    <td><%= attachment_image_tag item, :image, :fill, 50, 50 %></td>

    <td><%= item.name %></td>

    <td><%= item.price_excluding_tax %>円</td>

    <td><%=link_to"商品詳細", item_path(item.id) %></td>
  </tr>
</table>
<% end %>
