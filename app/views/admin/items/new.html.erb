<%= render 'layouts/admin_header' %>
<h2>商品新規登録</h2>

<%= form_for [:admin, @item] do |f| %>

<table>

  <tr>
    <td>商品画像</td><td><%= f.attachment_field :image %></td>
  </tr>

  <tr>
    <td>商品名</td><td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <td>商品説明</td><td><%= f.text_area :description %></td>
  </tr>

  <tr>
    <td>ジャンル</td><td><%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "選択してください" %></td>
  </tr>

  <tr>
    <td>税抜価格</td><td><%= f.text_field :price_excluding_tax %>円</td>
  </tr>

  <tr>
    <td>販売ステータス</td><td><%= f.select :is_active_sale_status, [['販売中', true], ['売り切れ', false]], { include_blank: "選択してください"} %></td>
  </tr>
</table>

<div>
  <%= f.submit '新規登録' %>
</div>

<% end %>
