<%= render 'layouts/admin_header' %>

<h2>注文履歴一覧</h2>
<table class="table table-hover table-inverse">

  <tr>
    <th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th>
  </tr>

  <% @orders.each do |order| %>

  <% @sum = 0 %>

  <% order.order_details.each do |order_detail| %>

  <% @sum += order_detail.quantity %>
  <% end %>

  <tr>
    <td><%= link_to order.created_at.to_s(:datetime_jp),admin_order_path(order.id) %></td>

    <td><%= order.end_user.first_name %><%= order.end_user.under_name %></td>

    <!-- <td><= order.order_details.sum(:quantity) %></td> -->
    <td><%= @sum %></td>

    <td><%= order.order_status_i18n %></td>
  </tr>
  <% end %>
</table>
